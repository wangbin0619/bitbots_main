<launch>
    <arg name="rviz" default="true"/>

    <group if="$(var rviz)">
        <node pkg="rviz2" exec="rviz2" output="screen"
              args="-d $(find-pkg-share humanoid_league_team_communication)/config/team_comm_marker.rviz">
        </node>
    </group>
    <node name="team_comm_test_marker" pkg="humanoid_league_team_communication" exec="teamcomm_test_marker.py" output="screen">
        <param from="$(find-pkg-share humanoid_league_team_communication)/config/team_communication_config.yaml" />
    </node>

</launch>
