<launch>
    <arg name="sim" default="false"/>
    <arg name="tf_prefix" default="$(eval '\'$(env ROS_NAMESPACE /)\'')"/>

    <node pkg="bitbots_convenience_frames" exec="convenience_frames" name="convenience_frames">
        <param name="use_sim_time" value="$(var sim)"/>
        <param name="base_link_frame" value="$(var tf_prefix)base_link"/>
        <param name="r_sole_frame" value="$(var tf_prefix)r_sole"/>
        <param name="l_sole_frame" value="$(var tf_prefix)l_sole"/>
        <param name="r_toe_frame" value="$(var tf_prefix)r_toe"/>
        <param name="l_toe_frame" value="$(var tf_prefix)l_toe"/>
        <param name="approach_frame" value="$(var tf_prefix)approach_frame"/>
    </node>
</launch>