<?xml version="1.0"?>
<launch>
    <arg name="record" default="true" />
    <arg name="out_dir" default="/robocup-logs" />

    <!-- record rosbag -->
    <group if="$(var record)">
        <include file="$(find-pkg-share wolfgang_robocup_api)/launch/record_bag.launch">
            <arg name="out_dir" value="$(var out_dir)" />
        </include>
    </group>

    <!-- load the robocup api -->
    <include file="$(find-pkg-share wolfgang_robocup_api)/launch/wolfgang_robocup_api_bridge.launch" />

    <!-- load the robot description -->
    <include file="$(find-pkg-share bitbots_utils)/launch/base.launch">
        <arg name="sim" value="true" />
    </include>

    <!-- load the motion -->
    <include file="$(find-pkg-share bitbots_bringup)/launch/motion.launch">
        <arg name="sim" value="true"/>
        <arg name="use_game_settings" value="true"/>
    </include>

    <!-- load the highlevel stuff -->
    <include file="$(find-pkg-share bitbots_bringup)/launch/highlevel.launch">
        <arg name="behavior" value="true" />
        <arg name="game_controller" value="true" />
        <arg name="localization" value="true" />
        <arg name="sim" value="true" />
        <arg name="simple" value="false" />
        <arg name="teamcom" value="true" />
        <arg name="vision" value="true" />
    </include>
</launch>
