<?xml version="1.0"?>
<launch>
    <arg name="nth_image" default="15" doc="records every nth image" />
    <arg name="out_dir" default="/robocup-logs" doc="Output directory" />

    <node name="record_bag_drop_images" pkg="topic_tools" type="drop" 
        args="/camera/image_proc 14 15 /camera/images_to_log" />

    <node name="record_rosbag" pkg="rosbag" type="record"
        args="--output-prefix=ID_$(env ROBOCUP_ROBOT_ID) --tcpnodelay --repeat-latched --lz4" />
</launch>

