<launch>
    <let name="tf_prefix" value=""/>
    <arg name="sim" default="false"/>

    <node pkg="humanoid_league_transform" output="screen" exec="transformer.py">
        <param from="$(find-pkg-share humanoid_league_transform)/config/transformer.yaml"/>
        <param name="publish_frame" value="$(var tf_prefix)base_footprint"/>
        <param name="base_footprint_frame" value="$(var tf_prefix)base_footprint"/>
        <param name="use_sim_time" value="$(var sim)"/>
    </node>
</launch>
