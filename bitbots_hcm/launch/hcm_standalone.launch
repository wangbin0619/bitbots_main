<launch>
    <arg name="sim" default="false" description="Disables some checks for hardware, since we are in simulation."/>
    <arg name="viz" default="false" description="Disables all checks for hardware, since we are in visualization."/>

    <include file="$(find-pkg-share bitbots_utils)/launch/base.launch">
        <arg name="sim" value="$(var sim)"/>
    </include>

    <node if="$(var viz)" name="motor_helper" pkg="bitbots_utils" exec="motor_goals_viz_helper.py" />

    <include file="$(find-pkg-share bitbots_animation_server)/launch/animation.launch">
    </include>

    <include file="$(find-pkg-share bitbots_hcm)/launch/hcm.launch">
        <arg name="sim" value="$(var sim)"/>
        <arg name="viz" value="$(var viz)"/>
    </include>

</launch>
