<?xml version="1.0"?>
<launch>
    <arg name="sim" default="false"/>
    <arg name="motion" default="true"/>
    <arg name="behavior" default="true"/>
    <arg name="simple" default="false" description="whether to use the simple behavior" />
    <arg name="game_controller" default="true" description="Sets whether the Gamecontroller should be started"/>
    <arg name="localization" default="true"/>
    <arg name="teamcom" default="false"/>
    <arg name="vision" default="true"/>

    <!-- load the robot description -->
    <include file="$(find-pkg-share bitbots_utils)/launch/base.launch">
        <arg name="sim" value="$(var sim)" />
    </include>

    <!-- load the motion -->
    <group if="$(var motion)">
        <include file="$(find-pkg-share bitbots_bringup)/launch/motion.launch">
            <arg name="sim" value="$(var sim)"/>
        </include>
    </group>

    <!-- load the highlevel stuff -->
    <include file="$(find-pkg-share bitbots_bringup)/launch/highlevel.launch">
        <arg name="behavior" value="$(var behavior)" />
        <arg name="game_controller" value="$(var game_controller)" />
        <arg name="localization" value="$(var localization)" />
        <arg name="sim" value="$(var sim)" />
        <arg name="simple" value="$(var simple)" />
        <arg name="teamcom" value="$(var teamcom)" />
        <arg name="vision" value="$(var vision)" />
    </include>

    <!-- load some monitoring tools -->
    <include file="$(find-pkg-share bitbots_utils)/launch/tools.launch" />
</launch>
