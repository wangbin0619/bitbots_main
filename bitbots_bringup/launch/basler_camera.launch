<?xml version="1.0" encoding="utf-8" ?>
<launch>
    <arg name="resize" default="true"/>
    <node pkg="pylon_camera" exec="pylon_camera_node" name="pylon_camera_node" output="screen">
        <rosparam command="load" file="$(find-pkg-share pylon_camera)/config/camera_settings.yaml"/>
        <param name="device_user_id" value="$(env ROBOT_NAME)" />
        <param name="camera_info_url" value="package://pylon_camera/config/camera_calibration_$(env ROBOT_NAME default).yaml" />
    </node>
    <group if="$(var resize)">
        <node pkg="nodelet" exec="nodelet" args="standalone image_proc/crop_decimate" name="crop_decimate">
            <remap from="/camera/image_raw"  to="/pylon_camera_node/image_raw" />
            <remap from="/camera_out/image_raw" to="/image_resized" />
            <rosparam command="load" file="$(find-pkg-share bitbots_utils)/config/binning.yaml"/>
        </node>
        <node pkg="nodelet" exec="nodelet" args="standalone white_balancer/WhiteBalanceNodelet" name="white_balancer">
            <rosparam command="load" file="$(find-pkg-share white_balancer)/config/config.yaml"/>
        </node>
    </group>
</launch>
