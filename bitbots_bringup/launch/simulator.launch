<?xml version="1.0"?>
<launch>
    <!-- set parameters -->
    <arg name="headless" default="false"/>

    <!-- load robot description -->
    <include file="$(find-pkg-share bitbots_utils)/launch/base.launch">
        <arg name="sim" value="true"/>
    </include>

    <!-- launch motion and webots with soccer field -->
    <group>
        <include file="$(find-pkg-share wolfgang_webots_sim)/launch/simulation.launch">
            <arg name="headless" value="$(var headless)" />
        </include>
        <!-- launch the motion without the walking -->
        <include file="$(find-pkg-share bitbots_bringup)/launch/motion.launch">
            <arg name="sim" value="true"/>
            <arg name="walking" value="false"/>
        </include>
    </group>
</launch>
