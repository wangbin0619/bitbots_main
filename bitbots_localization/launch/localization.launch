<launch>
    <!-- define parameters -->
    <arg name="fieldname" default="feldraum" doc="Loads field settings, e.g. for the feldraum (f-031)." />

    <!-- load localization -->
    <node pkg="bitbots_localization" type="localization" name="bitbots_localization" output="screen">
        <!-- load base parameters -->
        <rosparam command="load" file="$(find bitbots_localization)/config/config.yaml"/>
        <!-- load field specific paramters -->
        <rosparam command="load" file="$(find bitbots_localization)/config/fields/$(arg fieldname).yaml"/>
    </node>
    <!-- load the map for rviz-->
    <node name="map_server" pkg="map_server" type="map_server" output="screen" args="$(find bitbots_localization)/models/lines_$(arg fieldname).yaml">
        <param name="frame_id" value="map" />
    </node>
</launch>
