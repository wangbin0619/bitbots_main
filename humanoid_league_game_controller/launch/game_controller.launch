<?xml version="1.0" encoding="utf-8" ?>
<launch>
    <arg name="use_game_settings" default="false" description="true: load additional game settings" />

    <!-- Start the game controller -->
    <group unless="$(var use_game_settings)">
        <node pkg="humanoid_league_game_controller" exec="game_controller" name="humanoid_league_game_controller" output="screen">
            <param from="$(find-pkg-share humanoid_league_game_controller)/config/game_controller.yaml" />
            <param from="$(find-pkg-share humanoid_league_game_controller)/config/game_controller_settings.yaml" />
        </node>
    </group>

    <group if="$(var use_game_settings)">
        <node pkg="humanoid_league_game_controller" exec="game_controller" name="humanoid_league_game_controller" output="screen">
            <param from="$(find-pkg-share humanoid_league_game_controller)/config/game_controller.yaml" />
            <param from="$(find-pkg-share humanoid_league_game_controller)/config/game_controller_settings.yaml" />
            <param from="$(find-pkg-share bitbots_bringup)/config/game_settings.yaml" />
        </node>
    </group>
</launch>
